{{> header}}

<div class="profile-wrapper">
    <div class="profile-container">
        <img src="{{profilePicture}}" alt="Profile Picture">
    </div>
    <div class="profile-info">
        <div class="name">{{name}}</div>
        <div class="email">{{role}} | {{email}}</div>
    </div>
</div>

<div class="background-divider"></div>

<div class="reservations-title">Reservations</div>

<div class="outer-container">
    <div class="reservations-space">
        {{#each reservations}}
        <div class="reservation-box">
            <p><strong>Lab: </strong>{{lab}}</p>
            <p><strong>Date: </strong>{{date}}</p>
            <p><strong>Time: </strong>{{time}}</p>
        </div>
        {{/each}}
    </div>
</div>

<div class="buttons-container">
    <button class="edit-button" onclick="profileView()">Return to Profile View</button>
</div>
